@using Microsoft.AspNetCore.Mvc.Localization;
@using DMS.Models;
@inject IViewLocalizer Localizer;

@model DMS.Models.Folder

@{
    ViewBag.title = Localizer["FoldDelete"];
}

<h4>@Localizer["Folder"] -> @Localizer["FoldDelete"]</h4>
<div class="rounded-10 p-2 div-br-color">
    <br>

    <h5 class="text-danger">@Localizer["Are you sure you want to delete this?"]</h5>

<hr />

<div>

    <dl class="row">
        <dt class = "col-sm-2">
            @Localizer[Html.DisplayNameFor(model => model.Name)]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <a asp-action="Index" asp-route-id="@ViewBag.parentId"><button type="button" class="btn btn-secondary">@Localizer["Return"]</button></a>
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="@Localizer["Delete"]" class="btn btn-danger" />
    </form>
</div>

</div>